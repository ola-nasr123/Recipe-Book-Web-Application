<% layout('layout') -%>

<h2>All recipes</h2>


<form action="/recipes/search" method="GET" class="mb-4">
  <div class="input-group">
    <input type="text" name="term" class="form-control" placeholder="Search for a recipe..." required>
    <button class="btn btn-primary">research</button>
  </div>
</form>

<div class="row">
  <% recipes.forEach(recipe => { %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if (recipe.image) { %>
          <img src="<%= recipe.image %>" class="card-img-top" alt="Recipe image">
        <% } %>
        <div class="card-body">
          <h5 class="card-title"><%= recipe.title %></h5>
          <p class="card-text"><%= recipe.ingredients.substring(0, 80) %>...</p>
        </div>
      </div>
    </div>
  <% }) %>
</div>