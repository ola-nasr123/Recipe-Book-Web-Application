
<h2>All recipes</h2>


<form action="/recipes/search" method="GET" class="mb-4">
  <div class="input-group">
    <input type="text" name="term" class="form-control" placeholder="Search for a recipe..." required>
    <button class="btn btn-primary">research</button>
  </div>
</form>

<div class="row">
  <% recipes.forEach(recipe => { %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <% if (recipe.image) { %>
          <img src="<%= recipe.image %>" class="card-img-top" alt="Recipe image">
        <% } %>
        <div class="card-body">
          <% if (user && user._id.toString() === recipe.user.toString()) { %>
            <a href="/recipes/edit/<%= recipe._id %>" class="btn btn-sm btn-warning">✏️ Edit</a>
            <form action="/recipes/delete/<%= recipe._id %>" method="POST" style="display:inline;">
              <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">🗑 Delete</button>
            </form>
          <% } %>
          <h5 class="card-title"><%= recipe.title %></h5>
          <p class="card-text"><%= recipe.ingredients.substring(0, 80) %>...</p>
        </div>
      </div>
    </div>
  <% }) %>
</div>