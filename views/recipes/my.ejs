<%- include('../partials/header') %>

<div class="container mt-5">
  <h2>My Recipes</h2>

  <% if (recipes.length === 0) { %>
    <p>You have not added any recipes yet.</p>
  <% } else { %>
    <div class="row">
      <% recipes.forEach(recipe => { %>
        <div class="col-md-4">
          <div class="card mb-4">
            <% if (recipe.image) { %>
              <img src="<%= recipe.image %>" class="card-img-top" alt="Recipe Image">
            <% } %>
            <div class="card-body">
              <h5 class="card-title"><%= recipe.title %></h5>
              <p><strong>Ingredients:</strong> <%= recipe.ingredients %></p>
              <p><strong>Instructions:</strong> <%= recipe.instructions %></p>
              <p><small><%= new Date(recipe.createdAt).toDateString() %></small></p>
              <a href="/recipes/edit/<%= recipe._id %>" class="btn btn-warning btn-sm">Edit</a>
              <form action="/recipes/delete/<%= recipe._id %>" method="POST" style="display:inline;">
                <button class="btn btn-danger btn-sm">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<%- include('../partials/footer') %>